<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/text_red_color"/>
            <stroke android:color="@color/text_red_color"
                android:width="@dimen/space_2dp"/>
            <corners android:radius="@dimen/space_3dp"/>
            <padding android:bottom="@dimen/space_6dp"
                android:top="@dimen/space_6dp"
                android:right="@dimen/space_6dp"
                android:left="@dimen/space_6dp"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/cofees"/>
            <stroke android:color="@color/cofees"
                android:width="@dimen/space_2dp"/>
            <corners android:radius="@dimen/space_3dp"/>
            <padding android:bottom="@dimen/space_6dp"
                android:top="@dimen/space_6dp"
                android:right="@dimen/space_6dp"
                android:left="@dimen/space_6dp"/>
        </shape>
    </item>
</selector>