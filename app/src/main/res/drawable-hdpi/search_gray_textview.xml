<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white"/>
            <stroke android:color="@android:color/white"/>
            <corners android:radius="@dimen/space_3dp"/>
            <padding android:bottom="@dimen/space_3dp"
                android:right="@dimen/space_6dp"
                android:left="@dimen/space_6dp"
                android:top="@dimen/space_6dp"/>
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white"/>
            <stroke android:color="@color/colorAccent"
                android:width="@dimen/space_2dp"/>
            <corners android:radius="@dimen/space_3dp"/>
            <padding android:bottom="@dimen/space_6dp"
                android:right="@dimen/space_6dp"
                android:left="@dimen/space_6dp"
                android:top="@dimen/space_6dp"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/login_box_bg_color"/>
            <stroke android:color="@color/login_box_bg_color"
                android:width="@dimen/space_2dp"/>
            <corners android:radius="@dimen/space_3dp"/>
            <padding android:bottom="@dimen/space_6dp"
                android:right="@dimen/space_6dp"
                android:left="@dimen/space_6dp"
                android:top="@dimen/space_6dp"/>
        </shape>
    </item>
</selector>