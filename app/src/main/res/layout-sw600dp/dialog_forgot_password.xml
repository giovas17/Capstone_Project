<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:padding="@dimen/activity_horizontal_margin"
    android:minWidth="@dimen/min_width_dialog"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:text="@string/forgot_password"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:textColor="@color/text_orange_color"
        android:id="@+id/textView7" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_dividers"
        android:background="@color/text_orange_color"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:layout_marginTop="@dimen/margin_top_edit_text_forgot_dialog"
        android:background="@drawable/white_edit_text"
        android:hint="@string/prompt_account_email"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:ems="10"
        android:id="@+id/emailForgot" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:gravity="end">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/transparent_button"
            android:layout_marginRight="@dimen/space_3dp"
            android:textColor="@color/text_orange_color"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:id="@+id/cancelForgot"
            android:text="@string/cancel"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space_3dp"
            android:background="@drawable/transparent_button"
            android:textColor="@color/text_orange_color"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:id="@+id/okForgot"
            android:text="@string/ok"/>

    </LinearLayout>

</LinearLayout>