<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/ghostScreenDetail2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/white_transparency"
        android:clickable="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/space_6dp"
            android:weightSum="1"
            android:id="@+id/linearLayout">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageRecipeDetail2"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/heigh_image_detail"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:background="@android:color/white"
                    android:contentDescription="@string/image_item_content_description"
                    android:scaleType="fitCenter"
                    android:src="@drawable/placeholder"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/imageFlagRecipeDetail2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/imageRecipeDetail2"
                    android:layout_alignTop="@+id/imageBadgeRecipeDetail2"
                    android:layout_marginLeft="@dimen/space_4dp"
                    android:layout_marginStart="@dimen/space_4dp"
                    android:layout_toEndOf="@+id/imageBadgeRecipeDetail2"
                    android:layout_toRightOf="@+id/imageBadgeRecipeDetail2"
                    android:contentDescription="@string/flag_content_description"
                    android:src="@mipmap/ic_launcher"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/imageBadgeRecipeDetail2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/imageRecipeDetail2"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignTop="@+id/imageShareRecipeDetail2"
                    android:contentDescription="@string/monin_badge_content_description"
                    android:src="@drawable/monin_badge_icon"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/imageFavoriteRecipeDetail2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/imageRecipeDetail2"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:contentDescription="@string/favorite_content_description_detail"
                    android:padding="@dimen/space_4dp"
                    android:src="@drawable/details_fav_icon_pressed"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/imageShareRecipeDetail2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/imageRecipeDetail2"
                    android:layout_marginEnd="@dimen/space_6dp"
                    android:layout_marginRight="@dimen/space_6dp"
                    android:layout_toLeftOf="@+id/imageFavoriteRecipeDetail2"
                    android:layout_toStartOf="@+id/imageFavoriteRecipeDetail2"
                    android:contentDescription="@string/share_action_content_description"
                    android:padding="@dimen/space_4dp"
                    android:src="@drawable/details_share_icon"
                    android:visibility="invisible" />

                <View
                    android:id="@+id/dividerDetail2"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_2dp"
                    android:layout_below="@+id/imageRecipeDetail2"
                    android:layout_marginBottom="@dimen/space_4dp"
                    android:layout_marginTop="@dimen/space_4dp"
                    android:background="@android:color/black"
                    android:visibility="invisible" />

            </RelativeLayout>

            <TextView
                android:id="@+id/textDescriptionDetail2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/space_6dp"
                android:layout_marginTop="@dimen/space_6dp"
                android:background="@color/cofees"
                android:padding="@dimen/space_3dp"
                android:text="Title"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:visibility="invisible" />

            <RelativeLayout
                android:id="@+id/buttonsContainer2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/space_4dp"
                android:layout_marginTop="@dimen/space_4dp">

                <TextView
                    android:id="@+id/buttonServings2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/space_3dp"
                    android:background="@drawable/button_black"
                    android:clickable="true"
                    android:gravity="center"
                    android:minWidth="@dimen/space_90dp"
                    android:padding="@dimen/space_6dp"
                    android:text="@string/servings_button_Help"
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                    android:textColor="@color/colorAccent"
                    android:textStyle="italic"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/buttonUnits2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/space_3dp"
                    android:layout_toRightOf="@+id/buttonServings2"
                    android:background="@drawable/button_black"
                    android:gravity="center"
                    android:minWidth="@dimen/space_90dp"
                    android:padding="@dimen/space_6dp"
                    android:text="Imperial"
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                    android:textColor="@color/colorAccent"
                    android:textStyle="italic"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/buttonComplexity2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/space_3dp"
                    android:layout_toRightOf="@+id/buttonUnits2"
                    android:background="@color/login_box_bg_color"
                    android:gravity="center"
                    android:minWidth="@dimen/space_90dp"
                    android:padding="@dimen/space_6dp"
                    android:text="Easy"
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                    android:textStyle="italic" />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_40dp"
                    android:layout_marginLeft="@dimen/margin_left_arrow_ghost_detail"
                    android:layout_toRightOf="@+id/buttonUnits2"
                    android:src="@drawable/arrow_up2" />

                <TextView
                    android:id="@+id/textViewCommunityDetail2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/space_6dp"
                    android:layout_marginLeft="@dimen/space_6dp"
                    android:layout_marginTop="@dimen/space_80dp"
                    android:layout_toRightOf="@+id/imageView3"
                    android:text="@string/community_ghost_detaiL2"
                    android:textAllCaps="true"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@android:color/black" />

            </RelativeLayout>
        </LinearLayout>

